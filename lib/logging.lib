
init_module_logging() {
    parse_loglevel "$@"
}

parse_args_logging() {
    local result=0
    case "$1" in
        -v|--verbose)   log_verbose=true;  log_info=true;  result=1;;
        -q|--quiet)     log_verbose=false; log_info=false; result=1;;
    esac
    echo $result
}

verbose() { if ${log_verbose:-false}; then printf "%s " "${@}"; echo; fi }
info()    { if ${log_info:-true};     then echo "${@}"; fi }
verbose_cmd() {
    if ${log_verbose:-false}; then printf "    "; echo "${@}"; fi
    cmd=$1; shift
    $cmd "${@}"
}



parse_loglevel() {
    for arg in "$@"; do
        parse_args_logging "${arg}" >/dev/null
    done
}
